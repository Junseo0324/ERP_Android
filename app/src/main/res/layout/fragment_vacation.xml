<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.erp_qr.vaction.VacationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F9FA">

        <!-- 헤더 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp"
            android:elevation="2dp">

            <!-- 타이틀과 신청하기 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="휴가 관리"
                    android:textColor="#2C3E50"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnApplyVacation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/apply_button_background"
                    android:text="+ 신청하기"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

            <!-- 부제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴가 신청 내역을 확인하고 관리하세요"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- 검색창 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F6FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="휴가 유형이나 사유로 검색..."
                        android:textColorHint="#BDC3C7"
                        android:textColor="#2C3E50"
                        android:textSize="14sp"
                        android:background="@null"
                        android:inputType="text"
                        android:imeOptions="actionSearch" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 필터 탭 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabAll"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="전체 (5)"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/tab_selected_background"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tabApproved"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="보류 (1)"
                    android:textColor="#7F8C8D"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/tab_unselected_background"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/tabPending"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="승인 (3)"
                    android:textColor="#7F8C8D"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/tab_unselected_background"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/tabRejected"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="거절 (1)"
                    android:textColor="#7F8C8D"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/tab_unselected_background"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vacationRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_vacation"
            android:scrollbars="none" />

    </LinearLayout>
</layout>
