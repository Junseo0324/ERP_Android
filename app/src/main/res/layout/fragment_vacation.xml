<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical">

    <!-- 헤더 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <!-- 타이틀과 신청하기 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="휴가 관리"
                android:textColor="#2C3E50"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnApplyVacation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/apply_button_background"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="+ 신청하기"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 부제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="휴가 신청 내역을 확인하고 관리하세요"
            android:textColor="#7F8C8D"
            android:textSize="14sp" />

        <!-- 검색창 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#F5F6FA"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="휴가 유형이나 사유로 검색..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="#2C3E50"
                    android:textColorHint="#BDC3C7"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 필터 탭 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/tab_selected_background"
                android:gravity="center"
                android:text="전체 (5)"
                android:textColor="#2C3E50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabApproved"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="@drawable/tab_unselected_background"
                android:gravity="center"
                android:text="보류 (1)"
                android:textColor="#7F8C8D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="@drawable/tab_unselected_background"
                android:gravity="center"
                android:text="승인 (3)"
                android:textColor="#7F8C8D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabRejected"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/tab_unselected_background"
                android:gravity="center"
                android:text="거절 (1)"
                android:textColor="#7F8C8D"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vacationRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        tools:listitem="@layout/item_vacation" />

</LinearLayout>
