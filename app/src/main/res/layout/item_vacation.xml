<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 헤더 (휴가 타입과 상태) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textVacationType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textVacationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#27AE60"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_approved_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- 날짜 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar_today"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textVacationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#2C3E50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textVacationDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:background="@drawable/duration_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

        <!-- 담당자 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person_outline"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textApprover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F8C8D"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="16dp" />

        <!-- 사유 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_description"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신청 사유"
                    android:textColor="#7F8C8D"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textVacationReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 하단 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textApplicationNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#BDC3C7"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
